@model TAApplication.Models.Application

@{
    ViewData["Title"] = "Update";
}

<h1>Edit</h1>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="currentDegree" class="control-label"></label>
                <select asp-for="currentDegree"
                        asp-items="@Html.GetEnumSelectList<Degree>()"
                        class="form-control"></select>
                <span asp-validation-for="currentDegree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="currentDepartment" class="control-label"></label>
                <input asp-for="currentDepartment" class="form-control" />
                <span asp-validation-for="currentDepartment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UofU_GPA" class="control-label"></label>
                <input asp-for="UofU_GPA" class="form-control" />
                <span asp-validation-for="UofU_GPA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="desiredHours" class="control-label"></label>
                <input asp-for="desiredHours" class="form-control" />
                <span asp-validation-for="desiredHours" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="availableBefore" /> @Html.DisplayNameFor(model => model.availableBefore)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="numSemesters" class="control-label"></label>
                <input asp-for="numSemesters" class="form-control" />
                <span asp-validation-for="numSemesters" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="personalStatement" class="control-label"></label>
                <textarea asp-for="personalStatement" class="form-control"></textarea>
                <span asp-validation-for="personalStatement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="transferSchool" class="control-label"></label>
                <input asp-for="transferSchool" class="form-control" />
                <span asp-validation-for="transferSchool" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="linkedInURL" class="control-label"></label>
                <input asp-for="linkedInURL" class="form-control" />
                <span asp-validation-for="linkedInURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="resumeFileName" class="control-label"></label>
                <input asp-for="resumeFileName" class="form-control" />
                <span asp-validation-for="resumeFileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
