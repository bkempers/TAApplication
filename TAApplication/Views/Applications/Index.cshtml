@model IEnumerable<TAApplication.Models.Application>

@{
    ViewData["Title"] = "Index";
}

@{
    float averageGPA = 0;
    int numApplications = Model.Count();
}

<h1>Index</h1>

<p>
    Total Number of Applications: @numApplications
</p>

<p>
    @foreach (var item in Model) {
        averageGPA += item.UofU_GPA;
    }
    @{
        averageGPA /= numApplications;
    }
    Average GPA from Applications: @averageGPA
</p>

<p>
    <a asp-area="" asp-controller="Applications" asp-action="List">List Page</a>
</p>